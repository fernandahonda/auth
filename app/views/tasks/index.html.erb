<h1>Do the TODOs</h1>

<!-- AS AN ANONUMOUS USER, I CANNOT CREATE NEW TASKS -->
<% if @current_user %>
  <form action="/tasks" method="post">
    <input type="text" name="description">
    <button>Add new task</button>
  </form>
<% else %>
 <h3>Login to add a new task</h3>
<% end %>

<table>
  <% for task in @tasks %>
      <tr>
        <td>
          <%= task["description"] %>
        </td>
        <% if @current_user %>
          <td>
            <form action="/tasks/<%= task["id"] %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <button>Complete</button>
            </form>
          </td>
        <% end %>
      </tr>
  <% end %>
</table>
